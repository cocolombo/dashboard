<!-- Widget Horloge -->
<div class="bg-gray-800 p-4 rounded-lg shadow-lg flex flex-col justify-center items-center text-center">
    <div id="clock-display" class="text-5xl font-mono font-bold text-white tracking-wider"></div>
    <div id="date-display" class="text-sm text-gray-400 mt-1"></div>
</div>

<!-- Widget Météo -->
<div class="bg-gray-800 p-4 rounded-lg shadow-lg">
    <div class="flex items-center justify-between mb-2">
        <h3 class="font-bold text-lg text-white">Météo Montréal</h3>
        <div id="current-temp" class="text-2xl font-bold text-white">...</div>
    </div>
    <div id="current-desc" class="text-sm text-gray-400 mb-4">Chargement...</div>
    <div id="forecast-grid" class="grid grid-cols-3 gap-2 text-center">
        <!-- Prévisions chargées par JS -->
    </div>
</div>

<!-- Widget Calendrier -->
<div class="bg-gray-800 p-4 rounded-lg shadow-lg">
    <div id="cal-month-year" class="font-bold text-lg text-center text-white mb-3"></div>
    <div class="grid grid-cols-7 gap-1 text-center text-xs text-gray-400 mb-2">
        <span>Lun</span><span>Mar</span><span>Mer</span><span>Jeu</span><span>Ven</span><span>Sam</span><span>Dim</span>
    </div>
    <div id="cal-days" class="grid grid-cols-7 gap-y-1 text-center text-sm">
        <!-- Jours chargés par JS -->
    </div>
</div>
